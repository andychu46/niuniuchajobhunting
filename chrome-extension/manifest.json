{
  "manifest_version": 3,
  "name": "牛牛查求职助手",
  "version": "1.2.0",
  "description": "在招聘网站职位列表页每个职位添加公司工商信息查询功能，增加额外的职位首发/更新时间，职位详情。支持前程无忧、BOSS直聘、牛企直聘网站。",
  "author": "c1gstudio",
  "homepage_url": "https://blog.c1gstudio.com/",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://we.51job.com/*",
    "*://www.zhipin.com/*",
    "*://campus.niuqizp.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "*://we.51job.com/*",
        "*://www.zhipin.com/*",
        "*://campus.niuqizp.com/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "config.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "牛牛查求职助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "inject.js",
        "boss-debug.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}